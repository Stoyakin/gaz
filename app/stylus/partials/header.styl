.header
  position relative
  width 100%
  height 110px
  background-color #fff
  z-index 11

  @media $bigDesktopMax
    height 82px

  @media $mLandscapeMax
    position fixed
    left 0
    top 0
    width 100%
    box-shadow 0 5px 30px 4px rgba(0,0,0,0.05)
    height 64px

  &__burger
    display none
    position relative
    width 64px
    height 64px
    padding 0
    outline none
    border none
    background $blueLight
    user-select none
    cursor pointer
    z-index 10

    @media $mLandscapeMax
      display block

    i
      display block
      position absolute
      width 30px
      height 3px
      top auto
      bottom 23px
      left 17px
      transition-delay .13s
      transition-timing-function cubic-bezier(.55,.055,.675,.19)
      transition-duration .13s
      background-color #fff

      &:before, &:after
        display block
        content ""
        position absolute
        width 30px
        height 3px
        transition-timing-function ease
        transition-duration .15s
        transition-property transform

      &:before
        top -7px
        transition top .12s cubic-bezier(.33333,.66667,.66667,1) .2s,transform .13s cubic-bezier(.55,.055,.675,.19)
        background-color #fff

      &:after
        top -14px
        bottom -10px
        transition top .2s cubic-bezier(.33333,.66667,.66667,1) .2s,opacity .1s linear
        background-color #fff

    &--active
      i
        transition-delay .22s
        transition-timing-function cubic-bezier(.215,.61,.355,1)
        transform translate3d(0,-5px,0) rotate(-45deg)

        &:before
          top 0
          transition top .1s cubic-bezier(.33333,0,.66667,.33333) .16s,transform .13s cubic-bezier(.215,.61,.355,1) .25s
          transform rotate(-90deg)

        &:after
          top 0
          transition top .2s cubic-bezier(.33333,0,.66667,.33333),opacity .1s linear .22s
          opacity 0

  &__row
    display flex
    align-items center
    padding-left 24px

    @media $bigDesktopMax
      padding-left 19px

  &__logo
    flex-shrink 0
    margin-right 73px

    @media $bigDesktopMax
      max-width 173px
      margin-right 38px

    @media $mLandscapeMax
      margin-right 0
      max-width 154px

  &__contacts
    display flex
    justify-content space-between
    width calc(100% - 701px)
    margin-top -4px

    @media $bigDesktopMax
      justify-content center
      width calc(100% - 485px)
      margin-top 0

    @media (max-width: 1400px)
      width calc(100% - 460px)

    @media $minDesktopMax
      display none

    &-item
      display inline-flex
      align-items center
      margin-right 45px

      @media (max-width: 1400px)
        margin-right 30px

      @media $desktopMax
        margin-right 45px

      &:last-child
        margin-right 0

      &-overico
        display flex
        align-items center
        justify-content center
        width 58px
        height 58px
        background-color #f1f7ff
        border-radius 5px
        flex-shrink 0
        margin-right 30px

        @media $bigDesktopMax
          width 44px
          height 44px
          margin-right 20px

        @media $desktopMax
          display none

      &-ico
        max-width 90%
        max-height 90%

        @media $bigDesktopMax
          max-width 24px

      &-info
        display flex
        flex-direction column
        align-items flex-start

      &-title
        color $blueLight
        font-size 13px
        font-weight 400
        line-height 17px
        margin-bottom 8px
        letter-spacing 0.025em

        @media $bigDesktopMax
          font-size 11px
          line-height 15px
          margin-bottom 4px
          letter-spacing normal

      &-phone
        color $color
        font-size 18px
        font-weight 500
        line-height 22px

        @media $bigDesktopMax
          font-size 14px
          line-height 18px
          letter-spacing normal

      &-address
        display block
        color #a7a7a7
        font-size 13px
        font-weight 400
        line-height 17px
        margin-top 5px
        letter-spacing 0.025em

        @media $bigDesktopMax
          font-size 11px
          line-height 15px
          margin-top 4px
          letter-spacing normal

  &__feedback-btn
    display flex
    justify-content center
    align-items center
    position relative
    margin-left auto
    color $blueLight
    font-size 13px
    font-weight 500
    line-height 20px
    text-transform uppercase
    background-color #f1f7ff
    transition background .4s, color .4s
    width 309px
    min-height 110px
    padding 2px 10px 0 0
    letter-spacing 0.017em
    z-index 1

    @media $bigDesktopMax
      width 216px
      min-height 82px
      padding 0
      font-size 10px
      line-height 14px

    @media $mLandscapeMax
      min-height 64px
      min-width 200px

    &:before
      content ''
      display block
      position relative
      margin-right 22px
      width 26px
      height 26px
      background url('data:image/png;base64,') no-repeat center
      transition background .4s

      @media $bigDesktopMax
        width 19px
        height 19px
        background-size cover
        margin-right 15px

    &:after
      @extend .after
      left 0
      top 0
      width 0
      height 100%
      background-color $blueLight
      transition width .4s cubic-bezier(0.645, 0.045, 0.355, 1)
      z-index -1

    &:hover
      color #fff

      &:after
        width 100%

      &:before
        background-image url('data:image/png;base64,')
