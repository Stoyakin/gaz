.header
  position fixed
  left 0
  width 100%
  height 110px
  background-color #fff
  z-index 11

  &__burger
    display none
    position absolute
    top 0
    right 0
    width 50px
    height 50px
    padding 0
    outline none
    border none
    background #F8F8F8
    user-select none
    cursor pointer
    z-index 10

    @media $tPortraitMax
      display block

    i
      display block
      position absolute
      width 20px
      height 2px
      top auto
      bottom 19px
      left 15px
      transition-delay .13s
      transition-timing-function cubic-bezier(.55,.055,.675,.19)
      transition-duration .13s
      background-color #b2b2b2

      &:before, &:after
        display block
        content ""
        position absolute
        width 20px
        height 2px
        transition-timing-function ease
        transition-duration .15s
        transition-property transform

      &:before
        top -6px
        transition top .12s cubic-bezier(.33333,.66667,.66667,1) .2s,transform .13s cubic-bezier(.55,.055,.675,.19)
        background-color #b2b2b2

      &:after
        top -12px
        bottom -10px
        transition top .2s cubic-bezier(.33333,.66667,.66667,1) .2s,opacity .1s linear
        background-color #b2b2b2

    &--active
      i
        transition-delay .22s
        transition-timing-function cubic-bezier(.215,.61,.355,1)
        transform translate3d(0,-5px,0) rotate(-45deg)

        &:before
          top 0
          transition top .1s cubic-bezier(.33333,0,.66667,.33333) .16s,transform .13s cubic-bezier(.215,.61,.355,1) .25s
          transform rotate(-90deg)

        &:after
          top 0
          transition top .2s cubic-bezier(.33333,0,.66667,.33333),opacity .1s linear .22s
          opacity 0

  &__row
    display flex
    align-items center
    padding-left 24px

  &__logo
    flex-shrink 0
    margin-right 73px
    //&-img

  &__contacts
    display flex
    justify-content space-between
    width calc(100% - 701px)

    &-item
      display inline-flex
      align-items center
      margin-right 45px

      &:last-child
        margin-right 0

      &-overico
        display flex
        align-items center
        justify-content center
        width 58px
        height 58px
        background-color #f1f7ff
        border-radius 5px
        flex-shrink 0
        margin-right 29px

      &-ico
        max-width 90%
        max-height 90%

      &-info
        display flex
        flex-direction column
        align-items flex-start

      &-title
        color $blueLight
        font-size 13px
        font-weight 400
        line-height 17px
        margin-bottom 8px
        letter-spacing 0.025em

      &-phone
        color $color
        font-size 18px
        font-weight 500
        line-height 22px

      &-address
        display block
        color #a7a7a7
        font-size 13px
        font-weight 400
        line-height 17px
        margin-top 5px
        letter-spacing 0.025em

  &__feedback-btn
    display flex
    justify-content center
    align-items center
    position relative
    margin-left auto
    color $blueLight
    font-size 13px
    font-weight 500
    line-height 20px
    text-transform uppercase
    background-color #f1f7ff
    transition background .4s, color .4s
    width 309px
    min-height 110px
    padding 2px 16px 0 0
    letter-spacing 0.017em
    z-index 1

    &:before
      content ''
      display block
      position relative
      margin-right 25px
      width 26px
      height 26px
      background url('data:image/png;base64,') no-repeat center
      transition background .4s

    &:after
      @extend .after
      left 0
      top 0
      width 0
      height 100%
      background-color $blueLight
      transition width .4s cubic-bezier(0.645, 0.045, 0.355, 1)
      z-index -1

    &:hover
      color #fff

      &:after
        width 100%

      &:before
        background-image url('data:image/png;base64,')
