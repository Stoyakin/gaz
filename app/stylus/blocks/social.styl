.social
  padding 0
  display inline-flex
  align-items center
  margin 0 0 0 auto

  @media $mLandscapeMax
    margin-left 0
    margin-bottom 20px

  &__item
    flex-shrink 0
    margin-right 42px

    @media $bigDesktopMax
      margin-right 30px

    &:last-child
      margin-right 0

    &-href
      display inline-block
      vertical-align top
      background-repeat no-repeat
      background-position center

      svg
        fill #818283
        transition fill .4s

      &:hover
        svg
          fill #076af2

      &--vk
        width 22px
        height 12px

        @media $bigDesktopMax
          width 16px
          height 9px

      &--fb
        width 12px
        height 22px

        @media $bigDesktopMax
          width 10px
          height 16px

      &--ok
        width 14px
        height 22px

        @media $bigDesktopMax
          width 10px
          height 16px
