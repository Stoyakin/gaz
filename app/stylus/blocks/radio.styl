.radio
  position relative
  display inline-block
  vertical-align top
  margin-right 35px
  @media $desktopMax1440
    margin-right 27px
  &:last-child
    margin-right 0
  &.error
    .radio__label:before
      box-shadow: inset 0 0 0px 3px#f56767;
  &__input
    position absolute
    left 0
    top 0
    opacity 0
    visibility hidden
    &:checked ~ label:after
      opacity 1
  &__label
    display inline-flex
    align-items center
    position relative
    min-height 36px
    padding-left 60px
    color #a7a7a7
    font-size 14px
    font-weight 400
    line-height 24px
    cursor pointer
    @media $desktopMax1440
      font-size 12px
      line-height 18px
      min-height 26px
      padding-left 45px
    &:before
      @extend .before
      left 0
      top 0
      width 36px
      height 36px
      background-color #f0f7ff
      @media $desktopMax1440
        width 26px
        height 26px
    &:after
      @extend .after
      left 11px
      top 11px
      width 14px
      height 14px
      background-color $blueLight
      opacity 0
      transition opacity .4s
      z-index 2
      @media $desktopMax1440
        top 6px
        left 6px
