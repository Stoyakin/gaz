.igall
  margin-bottom 150px

  @media $bigDesktopMax
    margin-bottom 99px

  .swiper
    &-slide
      width auto

      &-active
        .igall__overimg
          &:before
            opacity 0
            visibility hidden

  &__overimg
    display inline-block
    vertical-align top
    width calc(100vw - 607px)
    position relative
    z-index 1

    @media $bigDesktopMax
      width calc(100vw - 452px)

    @media $tPortraitMax
      width calc(100vw - 252px)

    @media $tPortraitMax
      width 100vw

    &:before
      @extend .before
      left 0
      top 0
      width 100%
      height 100%
      background-color rgba($color, .5)
      transition opacity .4s, visibility .4s
      z-index 1

  &__img
    width 100%
    padding-top 57.731%
    background-repeat no-repeat
    background-position center
    background-size cover

  .swiper-buttons
    background-color #fff
    position absolute
    z-index 1
    left calc(100vw - 857px)
    bottom 0

    @media $bigDesktopMax
      left calc(100vw - 644px)

    @media $tPortraitMax
      left calc(100vw - 444px)

    @media $tPortraitMax
      left auto
      right 0
