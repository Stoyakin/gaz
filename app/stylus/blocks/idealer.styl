.idealer
  margin 0 auto 150px

  @media $bigDesktopMax
    margin-bottom 92px

  .swiper
    &-slide
      height auto
      align-items stretch

  &__item
    display flex
    justify-content center
    align-items center
    background-color white
    border 2px solid whitesmoke
    border-radius 3px
    padding 38px 30px
    height 100%
    user-select none
    cursor pointer

    @media $bigDesktopMax
      padding 15px 38px

    &-img
      max-width 90%
      max-height 90%
      filter grayscale(100%)
      opacity .7
      transition filter .4s, opacity .4s

    &:hover
      .idealer__item-img
        opacity 1
        filter grayscale(0%)
