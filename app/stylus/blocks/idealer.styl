.idealer
  margin 0 auto
  //&__title

  .swiper
    //&-container
    //&-wrapper
    &-slide
      height auto
      align-items stretch

  &__item
    display flex
    justify-content center
    align-items center
    background-color white
    border 2px solid whitesmoke
    border-radius 3px
    padding 30px
    height 100%
    user-select none
    cursor pointer

    &-img
      max-width 90%
      max-height 90%
      filter grayscale(100%)
      opacity .7
      transition filter .4s, opacity .4s

    &:hover
      .idealer__item-img
        opacity 1
        filter grayscale(0%)
