.date
  position absolute
  display flex
  flex-direction column
  top 0
  right 0
  width 108px
  padding 17px 20px 17px
  min-height 110px
  background-color $blueLight
  color #fff
  font-size 12px
  line-height 14px
  font-weight 500
  text-transform uppercase
  margin-top 0
  z-index 1
  @media $desktopMax1440
    width 80px
    min-height 81px
    font-size 9px
    line-height 13px
    padding 12px 15px 11px

  &--dark
    width 90px
    min-height 91px
    padding 13px 16px 11px
    font-size 10px
    line-height 14px
    background-color $color
    @media $desktopMax1440
      width 68px
      min-height 68px
      padding 8px 10px 7px
      font-size 8px
      line-height 12px

    .date-day
      font-size 38px
      margin 0 0 -1px
      @media $desktopMax1440
        font-size 28px

  &-day
    font-size 48px
    line-height 40px
    font-weight 500
    margin 3px 0 4px
    @media $desktopMax1440
      font-size 35px
      line-height 30px
      margin 2px 0 0

  &:nth-child(3)
    margin-top 3px
