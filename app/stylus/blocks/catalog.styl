.catalog
  &__row
    display flex
    flex-wrap wrap
    justify-content space-between
    align-items flex-start
  &__aside
    width 402px
    background-color #f1f7ff
    padding 35px 30px 30px
  &__content
    width calc(100% - 430px)
  &__cards
    display flex
    flex-wrap wrap
    width calc(100% + 28px)
    margin 0 -14px -28px
  &__card
    display flex
    flex-direction column
    position relative
    width calc(100%/3 - 28px)
    margin 0 14px 28px
    background-color white
    border 3px solid #f1f7ff
    &-top
      position absolute
      top -2px
      left -2px
      display flex
      justify-content space-between
      width calc(100% + 4px)
      z-index 2
    &-state
      color $blueLight
      background-color #f1f7ff
      padding 8px 10px
      user-select none
    &-avail
      color #fff
      background-color $color
      padding 8px 10px
      user-select none
    &-img
      display block
      position relative
      width 100%
      padding-top 69.479%
      user-select none
      &-over
        position absolute
        left 0
        top 0
        display flex
        justify-content center
        align-items center
        width 100%
        height 100%
      &-item
        height auto
        max-height 100%
    &-info
      display flex
      flex-direction column
      padding 20px 30px 35px
      flex-grow 1
    &-title
      color $color
      font-size 18px
      font-weight 500
      line-height 24px
      transition color .4s
      &:hover
        color $blueLight
    &-list
      display flex
      flex-wrap wrap
      margin 15px 0 25px
      &-item
        margin-right 45px
        &:last-child
          margin-right 0
        &-title
          color rgba($color, .5)
          margin-bottom 5px
        &-text
          color $color
    &-price
      margin-top auto
      color $blueLight
      font-size 18px
      font-weight 500
      line-height 24px
    &-bottom
      display flex
    &-btn
      min-width 50%
      width 50%

