.shedule
  width calc(100% - 100% / 3 - 14px)
  margin-bottom 50px !important
  @media $desktopMax
    width 100%
  &__filial
    margin-bottom 10px
    &:last-child
      margin-bottom 0
    &-address
      display block
      width 100%
      color #1d1f20
      font-size 22px
      font-weight 500
      line-height 28px
      margin-bottom 15px
    &-email, &-phone
      color rgba(29,31,32,0.86)
      font-size 16px
      line-height 26px
      letter-spacing 0.02em
      a
        color #1d1f20
        align-self flex-start
        transition opacity 0.4s
        &:hover
          opacity 0.7
  &__items
    display flex
    flex-wrap wrap
    width calc(100% + 28px)
    margin 0 -14px -28px
    @media $mPortraitMax
      width 100%
      margin 0
  &__item
    width calc(100%/3 - 28px)
    margin 0 14px 28px
    @media $mLandscapeMax
      width calc(50% - 28px)
    @media $mPortraitMax
      width 100%
      margin 0 0 15px
    &-title
      position relative
      color #1d1f20
      font-size 22px
      font-weight 500
      line-height 28px
      margin-bottom 15px
    &-data
      display flex
      flex-direction column
      color rgba(29,31,32,0.86)
      font-size 16px
      line-height 26px
      letter-spacing 0.02em
      > a
        color #1d1f20
        align-self flex-start
        transition opacity 0.4s
        &:hover
          opacity 0.7
      p:not([class])
        margin 0
        &:last-child
          margin-bottom 0
        & + p
          margin-top 0

