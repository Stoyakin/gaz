.insurance
  margin-bottom 143px
  @media $desktopMax1440
    margin-bottom 93px
  @media $minDesktopMax
    margin-left -30px
    margin-right -30px
    padding 0 30px
  .swiper
    &-container
      overflow visible
    &-wrapper
      counter-reset myCounter2
      .insurance__step-top:before
        content counters(myCounter2, ".", decimal-leading-zero)
        counter-increment myCounter2
  &__step
    position relative
    user-select none
    opacity .6
    transition opacity .4s
    &:before
      @extend .before
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      z-index 10000
    &--active
      user-select auto
      opacity 1
      &:before
        display none
        content none
      .insurance__step
        &-top
          background-color $blueLight
          &:before
            opacity 0.08
            color #fff
          &:after
            left auto
            right -51px
            background-image url('data:image/png;base64,')
        &-title
          color #fff
    &-top
      display flex
      align-items center
      justify-content center
      position relative
      padding-left 30px
      width 100%
      height 86px
      background-color #f1f7ff
      margin-bottom 20px
      transition background .4s
      @media $desktopMax1440
        height 64px
        padding-left 14px
        margin-bottom 15px
      &:before
        position absolute
        left -8px
        top 50%
        display block
        transform translateY(-50%)
        color #076af2
        font-size 72px
        font-weight 700
        text-transform uppercase
        opacity 0.05
        transition opacity .4s, color .4s
        @media $desktopMax1440
          font-size 54px
          left -5px
          /.swiper-slide:first-child &
            left -23px
      &:after
        content ''
        display block
        position absolute
        top 0
        left -28px
        width 51px
        height 100%
        background-image url('data:image/png;base64,')
        background-repeat no-repeat
        background-position 50% 50%
        background-size 100% 100%
        transition background .4s
        z-index 2
    &-title
      color #076af2
      font-size 13px
      font-weight 500
      line-height 20px
      text-transform uppercase
      @media $desktopMax1440
        font-size 11px
    &-text
      margin-bottom 31px
      padding-top 15px
      @media $desktopMax1440
        padding-top 9px
        margin-bottom 18px
      &:last-child
        margin-bottom 0
      .wis-content
        p, ul li, ol li, a
          font-size 14px
          line-height 24px
          @media $desktopMax1440
            font-size 12px
            line-height 18px
    &-btn
      width 100%
      margin-top 7px
      .ico-arrow
        display inline-block
        vertical-align middle
        position relative
        top -1px
        margin-left 10px
        width 35px
        height 12px
        background url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAACMAAAAMBAMAAAAaDRmJAAAAG1BMVEUAAAD////////////////////////////////rTT7CAAAACHRSTlMAW/E3+FBBLkEgIrUAAAAsSURBVAjXY0ABrI4M6IBdQwBDzKgRQ4gZh7IOdJCARQhTIwHjEYownYrpIQAy9hcdgVHp0QAAAABJRU5ErkJggg==') no-repeat center
        transition background .4s
      &:hover
        .ico-arrow
          background-image url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAACMAAAAMBAMAAAAaDRmJAAAAG1BMVEUAAAAAavYAavYAavYAavYAavYAavYAavYAavaIxLrYAAAACHRSTlMAW/E3+FBBLkEgIrUAAAAsSURBVAjXY0ABrI4M6IBdQwBDzKgRQ4gZh7IOdJCARQhTIwHjEYownYrpIQAy9hcdgVHp0QAAAABJRU5ErkJggg==')
      &--submit
        margin-top 29px
  &__auto
    &-wrap
      position relative
      width 100%
      padding-top 74.627%
      border 3px solid #f1f7ff
      background-color #fff
      margin-bottom 7px
      @media $desktopMax1440
        padding-top 71.627%
    &-overimg
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      display flex
      justify-content center
      align-items center
    &-img
      max-height 100%
      height auto
  .form
    &__row
      margin-bottom 7px
      &:last-child
        margin-bottom 0
      &-title
        margin-top 15px
    &__radio-group
      margin-bottom 25px
      @media $desktopMax1440
        margin-bottom 15px
