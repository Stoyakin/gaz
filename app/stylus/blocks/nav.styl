.nav
  position fixed
  left 0
  top 0
  width 96px
  height 100vh
  min-height 650px
  box-shadow -15px 0 56.4px 3.6px rgba(0, 0, 0, 0.08)
  z-index 11

  @media $bigDesktopMax
    width 84px

  @media $mLandscapeMax
    position fixed
    left 0
    top 0
    width 100%
    height 100vh
    overflow-x hidden
    overflow-y auto
    padding 80px 0
    opacity 0
    visibility hidden

  &__list
    display flex
    flex-direction column
    justify-content space-between
    position relative
    height 100%
    z-index 1

    &-item
      flex-grow 1
      border-top 1px solid #f2f2f2
      background-color white

      &:hover
        .nav__sublist
          left 96px

          @media $bigDesktopMax
            left 84px

      &--logo
        flex-shrink 0
        flex-grow 0
        border-top none
        background-color $blueLight

        @media $mLandscapeMax
          display none

        .nav__list
          &-href
            position relative
            align-items flex-start
            justify-content center
            width 100%
            padding 0
            height 110px
            overflow hidden

            @media $bigDesktopMax
              height 82px

          &-img
            max-width none
            position relative
            left 20px
            width 53px
            height 53px
            flex-shrink 0

            @media $bigDesktopMax
              left 19px
              width 46px
              height 46px

    &-href
      display flex
      flex-direction column
      justify-content center
      align-items center
      flex-grow 1
      height 100%
      padding 10px

      &-overico
        margin-bottom 14px

        @media $bigDesktopMax
          display flex
          justify-content center
          align-items center
          max-width 24px
          max-height 24px

        svg
          fill #a7a7a7
          transition fill .4s

          max-width 100%
          max-height 100%

      &-text
        color #a7a7a7
        font-size 12px
        line-height 14px
        font-weight 500
        transition color .4s

        @media $bigDesktopMax
          font-size 10px
          line-height 12px

      &:hover
        .nav__list-href
          &-overico svg
            fill $blueLight

          &-text
            color $blueLight

  &__sublist
    position absolute
    top 0
    left -304px
    counter-reset sublist
    background-color $color
    padding 156px 49px 56px
    width 400px
    height 100vh
    overflow-x hidden
    overflow-y auto
    transition left .4s cubic-bezier(0.645, 0.045, 0.355, 1)
    z-index -1

    @media $bigDesktopMax
      left -316px

  &__subitem
    margin-bottom 29px
    padding-left 34px

    &--logo
      position absolute
      left 0
      top 0
      display flex
      align-items center
      justify-content center
      width 100%
      height 110px
      background-color $blueLight
      padding 0

      @media $bigDesktopMax
        height 82px

        img
          height 46px

      a
        display block

  &__subhref
    position relative
    font-size 15px
    font-weight 500
    line-height 19px
    color #dedede
    border-bottom 2px solid transparent
    letter-spacing .02em
    transition color .4s, border .4s

    &:before
      display inline-block
      counter-increment sublist
      content counter(sublist,  decimal-leading-zero) " "
      position absolute
      top 0
      left -34px
      color #e9eff7
      font-family "GothamPro"
      font-size 11px
      font-weight 500
      line-height 19px
      color #2c2f30
      transition color .4s

    &:hover, &--active
      color $blueLight

      &:before
        color #4b4b4b

    &--active
      border-color $blueLight
