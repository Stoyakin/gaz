.tippy
  &-popper
    max-width 830px

  &-tooltip
    color white
    font-family "GothamPro"
    font-size 12px
    font-weight 400
    line-height 16px
    background-color $blueLight
    border-radius 3px
    box-shadow 0 4px 22.6px 1.4px rgba(0, 0, 0, 0.1)
    padding 25px
    text-align left

    [x-arrow]
      background-color $blueLight

