.feedback
  width 100%
  max-width 1176px
  background-color #f1f7ff
  padding 51px 50px 57px
  margin 80px auto 0
  &:first-child
    margin-top 0
  @media $bigDesktopMax
    max-width 884px
    padding 44px 40px 45px
  &__title
    margin-bottom 50px
    letter-spacing -0.035em
    @media $bigDesktopMax
      font-size 24px
      line-height 30px
      margin-bottom 37px
      letter-spacing normal
  &--test-drive
    max-width 670px
    margin 80px auto 150px
    padding 51px 70px 57px
    &:first-child
      margin-top 0
    &:last-child
      margin-bottom 0
  & + .main__center
    margin-top 150px
