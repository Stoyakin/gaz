.action
  margin-bottom 150px

  &__row
    display flex
    flex-wrap wrap

  &__left
    width 352px
    flex-shrink 0
    background-color #f1f7ff
    padding 50px
    margin-right 78px
    margin-top 127px

    &-title
      outline none

    &-text
      color rgba($color, .86)
      font-size 14px
      font-weight 400
      line-height 21px

    .swiper-buttons
      margin-top 70px
      // .swiper-button-prev
      // .swiper-button-next

  &__right
    width calc(100% - 440px)

  &__top
    display flex
    flex-wrap wrap
    align-items center
    margin-bottom 42px

  &__tabs
    &-nav
      display flex
      flex-wrap wrap
      max-width calc(100% - 355px)
      margin-bottom -20px

      &-item
        margin-right 54px
        margin-bottom 20px

        &:last-child
          margin-right 0

      &-btn
        position relative
        font-size 13px
        font-weight 500
        line-height 20px
        text-transform uppercase
        color #a7a7a7
        padding 10px 0
        background none
        outline none
        user-select none
        border none
        transition color .4s

        &:after
          @extend .after
          left 0
          bottom 0
          width 0
          height 3px
          background-color $blueLight
          transition width .4s

        &:hover, &--active
          color $blueLight

        &--active
          &:after
            width 27px

    &-list
      &-item
        display none
        &--active
          display block

  &__subscr-href
    margin-left auto


  &__carousel
    .publ
      width 100%
      margin 0
      &__item
        width 100%
        margin 0

