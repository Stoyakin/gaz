.tooltips
  &__item
    position absolute
    z-index 1
    &:before
      @extend .before
      width 20px
      height 25px
      z-index -1
    &:hover
      .tooltips__item-text
        opacity 1
        visibility visible
    &--top, &--bottom
      &:before
        left 50%
        transform translateX(-50%)
      .tooltips__item-text
        left 50%
        transform translateX(-50%)
    &--top
      &:before
        bottom 0
      .tooltips__item-text
        bottom 20px
    &--bottom
      &:before
        top 0
      .tooltips__item-text
        top 20px
    &--right, &--left
      &:before
        top 50%
        transform translateY(-50%)
      .tooltips__item-text
        top 50%
        transform translateY(-50%)
    &--right
      &:before
        left 0
      .tooltips__item-text
        left 20px
    &--left
      &:before
        right 0
      .tooltips__item-text
        right 20px
    &-pin
      width 16px
      height 16px
      background-color #fff
      border 5px solid $blueLight
      box-shadow 0 0 24px rgba(7, 106, 242, 0.2)
      cursor pointer
    &-text
      position absolute
      width 260px
      color rgba(#fff, .9)
      font-size 12px
      line-height 16px
      background-color $blueLight
      padding 10px 18px 10px
      box-shadow 0 4px 22.6px 1.4px rgba(0, 0, 0, 0.1)
      opacity 0
      visibility hidden
      transition opacity .4s, visibility .4s
      &:before
        @extend .before

