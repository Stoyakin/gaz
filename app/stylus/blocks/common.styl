.title
  position relative
  color #1d1f20
  font-size 36px
  line-height 40px
  font-weight 500
  padding-bottom 36px
  margin-bottom 50px
  letter-spacing .02em
  @media $bigDesktopMax
    font-size 24px
    line-height 34px
    padding-bottom 25px
    margin-bottom 36px
    letter-spacing 0
  &:after
    @extend .after
    left 0
    bottom 0
    width 52px
    height 3px
    background-color $blueLight
    @media $bigDesktopMax
      width 40px
  &--white
    color #fff
    &:after
      background-color #fff
  &--center
    text-align center
    &:after
      left 50%
      transform translateX(-50%)
.swiper
  &-buttons
    background-color #fff
    display inline-flex
  &-button
    &-prev, &-next
      position relative
      left auto
      right auto
      top auto
      margin 0
      width 125px
      height 96px
      transform none
      background none
      border none
      outline none
      user-select none
      @media $bigDesktopMax
        width 96px
        height 72px
      @media $minDesktopMax
        height 64px
      @media $mPortraitMax
        width 64px
      &:hover
        &:before
          border-color $blueLight
      &:before
        @extend .before
        left 50%
        top 50%
        transform translate(-50%, -50%) rotate(45deg)
        width 8px
        height 8px
        border-left 2px solid $color
        border-bottom 2px solid $color
        transition border .4s
        @media $bigDesktopMax
          width 5px
          height 5px
    &-next
      &:before
        transform translate(-50%, -50%) rotate(45deg) scale(-1, -1)
      &:after
        @extend .after
        left 0
        top 50%
        transform translateY(-50%)
        width 2px
        height 26px
        background-color whitesmoke
    &--min
      width 48px
      height 48px
      background-color #f1f7ff
      &:before
        width 6px
        height 6px

.bottom-row
  display flex
  justify-content center
  margin-top 50px

.hidden-block
  display none

.red
  color #f56767
