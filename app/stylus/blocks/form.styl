.form
  &__row
    display flex
    flex-wrap wrap
    width calc(100% + 7px)
    margin 0 -3.5px 27px
    &:last-child
      margin-bottom 0
  &__field
    position relative
    width 100%
    &--min
      width calc(100%/3 - 7px)
      margin 0 3.5px 7px
    &--center, &--min&--center
      margin 0 auto
    &-input, &-textarea
      display block
      width 100%
      color $color
      font-family GothamPro
      font-size 15px
      line-height 24px
      font-weight 500
      padding 36px 40px 26px
      text-transform uppercase
      border 3px solid transparent
      background #fff
      outline none
      border none
      &:focus, &.no-empty
        & + .form__field-label
          top 15px
    &-input
      height 86px
    &-textarea
      height 192px
      resize none
      width calc(100% - 7px)
      margin 0 3.5px
    &-label
      position absolute
      left 40px
      top 36px
      display inline-block
      max-width calc(100% - 80px)
      font-family GothamPro
      color #a7a7a7
      font-size 13px
      font-weight 500
      line-height 20px
      text-transform uppercase
      pointer-events none
      transition top .4s
      span
        font-weight 700
    &-submit
      width 100%
    &-select--validate
      & + .choices__list
        .choices__placeholder
          display inline-block
          vertical-align top
          position relative
          padding-right 15px
          width auto
          max-width 100%
          &:after
            content '*'
            position absolute
            display inline-block
            vertical-align baseline
            right 0
            top 0
            color #f56767
            font-size 13px
            font-weight 700
  &__agreement, &__warning
    margin-left 7px
  &__agreement
    width 100%
    margin-bottom 25px
    color #a7a7a7
    letter-spacing .022em
    &:last-child
      margin-bottom 0
    a
      color $blueLight
      border-bottom 1px solid $blueLight
      transition border .4s
      &:hover
        border-bottom-color transparent
  &__warning
    color #525354
    letter-spacing .025em
    span
      font-size 13px
      font-weight 700
      text-transform uppercase

  .choices__inner
    background-color #fff
