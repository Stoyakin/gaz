.inews
  margin-bottom 108px

  @media $bigDesktopMax
    margin-bottom 58px

  &__top
    display flex
    align-items flex-start
    margin-bottom 41px

    @media $bigDesktopMax
      margin-bottom 28px

    @media $tPortraitMax
      flex-wrap wrap

    &-right
      display flex
      flex-shrink 0
      margin-left auto

      @media $tPortraitMax
        width 100%
        margin 0 0 0 0

  &__title
    margin-top 5px
    max-width calc(100% - 700px)
    margin-bottom 0

    @media $bigDesktopMax
      margin-top 5px

    @media $tPortraitMax
      margin-top 0
      max-width 100%
      margin-bottom 40px

  &__all-href, &__subscr-href
    min-width 300px
    text-align center
    flex-shrink 0
    padding-left 48px
    padding-right 48px

    @media $bigDesktopMax
      min-width 224px
      padding-left 37px
      padding-right 37px

    @media $mLandscapeMax
      min-width 210px
      padding-left 15px
      padding-right 15px

  &__all-href
    box-shadow: inset 0 0 0 3px #f1f7ff

    &:hover
      box-shadow: inset 0 0 0 3px $blueLight

  &__subscr-href
    margin-left 28px

  &__wrap
    display flex
    flex-wrap wrap
    width calc(100% + 28px)
    margin 0 -14px
