.card
  margin-bottom 150px
  &:last-child
    margin-bottom 0
  &__tabs
    &-nav
      display flex
      margin-bottom 28px
      &-item
        width 100%
      &-button
        display block
        width 100%
        background-color #f1f7ff
        text-align center
        color #076af2
        font-family GothamPro
        font-size 13px
        font-weight 500
        line-height 20px
        text-align center
        text-transform uppercase
        white-space nowrap
        padding 34px 60px 32px
        letter-spacing 0.025em
        border none
        outline none
        transition background .4s, color .4s
        user-select none
        z-index 1
        &:hover, &--active
          background-color $blueLight
          color #fff
        &--active
          background-color #076af2
          pointer-events none
    //&-list
    &-item
      display none
      &--active
        display block
  &__row
    display flex
    flex-wrap wrap
    justify-content space-between
  &__left
    width 50%
  &__right
    width calc(50% - 40px)
    padding-top 20px
  &__price
    color $color
    font-weight 500
    font-size 30px
    line-height 30px
    margin-bottom 20px
    span
      font-size 18px
  &__programms
    margin-bottom 25px
    &:last-child
      margin-bottom 0
    &-item
      font-size 16px
      line-height 30px
      color #525354
      margin-bottom 10px
      &:last-child
        margin-bottom 0
      span
        font-weight 500
      a
        color $blueLight
        border-bottom 1px dashed $blueLight
        transition border .4s
        &:hover
          border-bottom-color transparent
  &__btns
    display flex
    flex-wrap wrap
    margin-bottom 23px
    width calc(100% + 7px)
    margin 0 -3.5px 23px
    &:last-child
      margin-bottom 0
    &-item
      width calc(50% - 7px)
      margin 0 3.5px 7px
      &-btn
        width 100%
        min-width 100%
  &__specifications
    display flex
    flex-wrap wrap
    justify-content space-between
    background-color #f1f7ff
    padding 25px 30px 10px
    margin-bottom 20px
    &:last-child
      margin-bottom 0
    &-item
      margin-bottom 15px
      &-title
        color rgba($color, .5)
        margin-bottom 5px
      &-text
        color $color
  &__descr
    width 100%
    margin-bottom 30px
    &:last-child
      margin-bottom 0
