.publ
  display flex
  flex-wrap wrap
  width calc(100% + 28px)
  margin 0 -14px

  &__item
    width calc(25% - 28px)
    margin 0 14px 28px

    @media $tPortraitMax
      width calc(50% - 28px)
      margin-bottom 50px

    &:hover
      .publ__item
        &-cover
          &:before
            width 100%

          &:after
            margin-left 0
            opacity 1
            visibility visible

        &-title
          color #076af2
          border-bottom-color #c4dbfc

    &-cover
      display block
      position relative
      width 100%
      padding-top 67.67%
      background-repeat no-repeat
      background-position center
      background-size cover
      margin-bottom 22px
      /*margin-bottom 23px*/
      z-index 1

      @media $bigDesktopMax
        margin-bottom 26px

      &:before
        @extend .before
        left 0
        top 0
        width 0
        height 100%
        background-color rgba(#1d1f20, .5)
        transition width .4s
        z-index -1

      &:after
        @extend .after
        left 50%
        top 50%
        transform translate(-50%, -50%)
        width 48px
        height 48px
        background url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABQAAAAJBAMAAADA7xF7AAAAMFBMVEUAAAAAQ58AQ58AQ58AQ58AQ58AQ58AQ58AQ58AQ58AQ58AQ58AQ58AQ58AQ58AQ58B+wHKAAAAD3RSTlMAZvtW9erjxZlGOikVDd1W25euAAAAKUlEQVQI12OAgusCDDBwTBnO5A6awGAoCAH9Xgz/YeAfsihCLbIJCHMBfCAScro2ulMAAAAASUVORK5CYII=') no-repeat center white
        margin-left -24px
        opacity 0
        visibility hidden
        transition opacity .4s, visibility .4s, margin .4s
        z-index 1

        @media $bigDesktopMax
          width 36px
          height 36px
          background-size 15px

    &-title
      color #1d1f20
      font-family GothamPro
      font-size 18px
      font-weight 500
      line-height 24px
      letter-spacing 0.02em
      border-bottom 1px solid transparent
      transition border .4s, color .4s

      @media $bigDesktopMax
        font-size 14px
        line-height 18px

    &-date
      display block
      color rgba($color, .5)
      font-size 14px
      font-weight 400
      line-height 16px
      margin-top 20px
      letter-spacing 0.02em

      @media $bigDesktopMax
        font-size 12px
        line-height 14px
        margin-top 15px

    &-text
      opacity 0.86
      color rgba($color, .86)
      font-size 14px
      font-weight 400
      line-height 24px
      margin-top 19px
      /*margin-top 34px*/
      letter-spacing 0.02em

      @media $bigDesktopMax
        font-size 13px
        line-height 21px
        margin-top 24px
