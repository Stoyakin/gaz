.publ
  width calc(25% - 28px)
  margin 0 14px 28px

  @media $tPortraitMax
    width calc(50% - 28px)
    margin-bottom 50px

  @media $mPortraitMax
    width calc(100% - 28px)
    margin-bottom 30px

  &:hover
    .publ
      &__cover
        &:before
          width 100%

        &:after
          margin-left 0
          opacity 1
          visibility visible

      &__title
        color $blueLight
        border-bottom-color #c4dbfc

  &__cover
    display block
    position relative
    width 100%
    padding-top 67.67%
    background-repeat no-repeat
    background-position center
    background-size cover
    margin-bottom 22px
    z-index 1

    @media $bigDesktopMax
      margin-bottom 26px

    &:before
      @extend .before
      left 0
      top 0
      width 0
      height 100%
      background-color rgba($color, .5)
      transition width .4s
      z-index -1

    &:after
      @extend .after
      left 50%
      top 50%
      transform translate(-50%, -50%)
      width 48px
      height 48px
      background url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABQAAAAJBAMAAADA7xF7AAAAMFBMVEUAAAAAQ58AQ58AQ58AQ58AQ58AQ58AQ58AQ58AQ58AQ58AQ58AQ58AQ58AQ58AQ58B+wHKAAAAD3RSTlMAZvtW9erjxZlGOikVDd1W25euAAAAKUlEQVQI12OAgusCDDBwTBnO5A6awGAoCAH9Xgz/YeAfsihCLbIJCHMBfCAScro2ulMAAAAASUVORK5CYII=') no-repeat center white
      margin-left -24px
      opacity 0
      visibility hidden
      transition opacity .4s, visibility .4s, margin .4s
      z-index 1

      @media $bigDesktopMax
        width 36px
        height 36px
        background-size 15px

  &__title
    color $color
    font-size 18px
    font-weight 500
    line-height 24px
    letter-spacing 0.02em
    border-bottom 1px solid transparent
    transition border .4s, color .4s

    @media $bigDesktopMax
      font-size 14px
      line-height 18px

  &__date
    display block
    color rgba($color, .5)
    font-size 14px
    font-weight 400
    line-height 16px
    margin-top 20px
    letter-spacing 0.02em

    @media $bigDesktopMax
      font-size 12px
      line-height 14px
      margin-top 15px

  &__text
    color rgba($color, .86)
    font-size 14px
    font-weight 400
    line-height 24px
    margin-top 19px
    letter-spacing 0.02em

    @media $bigDesktopMax
      font-size 13px
      line-height 21px
      margin-top 24px

  &--min
    display flex
    width 100%
    position relative

    &:hover
      &:before
        opacity .7

      .publ__title
        border none
        color #fff

    &:before
      @extend .before
      left 0
      bottom 0
      width 100%
      height 100%
      opacity .6
      background-image linear-gradient(to top, $color 0%, $color 16%, transparent 44%, transparent 100%)
      transition opacity .5s
      z-index -1

      @media $mPortraitMax
        background black
        z-index -3
        opacity 1

    .publ
      &__cover
        display block
        width 100%
        padding-top 60.647%
        background-repeat no-repeat
        background-position 50% 50%
        background-size cover
        margin 0
        z-index -2

        @media $mPortraitMax
          opacity .4

      &__info
        position absolute
        z-index 1
        left 40px
        width calc(100% - 180px)
        bottom 31px
        z-index 1
        @media $desktopMax1440
          left 30px
          bottom 24px
          width calc(100% - 140px)
        @media $mLandscapeMax
          left 20px
          bottom 20px
          width calc(100% - 100px)

      &__title
        color #fff
        font-size 20px
        font-weight 500
        line-height 24px
        border none
        @media $desktopMax1440
          font-size 14px
          font-weight 500
          line-height 18px

      &__text
        color rgba(#fff, .86)
        margin-top 10px
        @media $desktopMax1440
          font-size 12px
          line-height 16px
