.gallery
  &__top
    background-color white
    border 3px solid #f1f7ff
    margin-bottom 10px
    // .swiper
    //   &-container
    //   &-wrapper
    //   &-slide
    &-content
      width 100%
      position relative
      padding-top 74.380%
    &-overimg
      display flex
      justify-content center
      align-items center
      position absolute
      left 0
      top 0
      height 100%
      width 100%
    &-img
      height auto
      max-height 100%
  &__thumbs
    position relative
    .swiper
      &-slide
        max-width 170px
        &-thumb-active
          .gallery__thumbs-overimg
            border-color $blueLight
    //   &-container
    //   &-wrapper
    &-overimg
      display block
      position relative
      width 100%
      padding-top 74.390%
      background-color white
      border 3px solid #f1f7ff
      transition border .4s
      overflow hidden
      &:hover
        &:before
          opacity 1
      &:before
        @extend .before
        left 0
        top 0
        width 100%
        height 100%
        background-color rgba(#fff, .1)
        opacity 0
        transition opacity .4s
        z-index 1
    &-img
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      object-fit cover
  .swiper-button
    &-prev, &-next
      position absolute
      top 50%
      transform translateY(-50%)
      z-index 2
    &-prev
      left 0
    &-next
      right 0
  .tooltips
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    z-index 1
