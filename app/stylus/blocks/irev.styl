.irev
  margin-bottom 143px

  @media $bigDesktopMax
    margin-bottom 93px

  .swiper
    &-ind
      display flex
      align-items center
      margin-bottom 56px
      user-select none

      @media $bigDesktopMax
        margin-bottom 39px

      &-number
        font-size 13px
        font-weight 500
        line-height 20px
        text-transform uppercase

        &--prev
          font-size 36px
          font-weight 500
          line-height 39px
          color $blueLight

          @media $bigDesktopMax
            font-size 26px
            line-height 30px

        &--next
          font-size 14px
          font-weight 500
          line-height 21px
          color rgba(#fff, .14)

          @media $bigDesktopMax
            font-size 12px
            line-height 14px

      &-line
        position relative
        background-color rgba(#fff, .14)
        width 106px
        height 3px
        flex-shrink 0
        margin 0 27px

        @media $bigDesktopMax
          width 78px

        span
          display block
          height 2px
          position absolute
          left 0
          top 0
          background-color $blueLight
          transition width 7s

    &-buttons
      position absolute
      right 0
      bottom 0
      z-index 2

  &__row
    position relative
    display flex

  &__decor
    width 32%
    margin-right -7%

    @media $minDesktopMax
      display none

    &-item
      position relative
      background-position center
      background-size cover
      background-repeat no-repeat
      width 100%
      height 100%
      z-index 1

  &__right
    width calc(100% - 25%)
    margin-left auto
    z-index 2

    @media $bigDesktopMax
      width calc(100% - 25% - 7px)

    @media $bigDesktopMax
      margin-left 0
      width 100%

  &__top
    display flex

    @media $minDesktopMax
      align-items flex-end
      margin-bottom 36px

    @media $tPortraitMax
      flex-wrap wrap

  &__title
    position absolute
    top 50%
    transform translateY(-50%)
    left 11.6%
    margin 0
    max-width 414px
    margin-top 20px

    @media $bigDesktopMax
      max-width 320px
      margin-top 15px

    @media $minDesktopMax
      position relative
      left auto
      top auto
      transform none
      margin-top 0
      color $color
      padding-bottom 25px

      &:after
        display block
        content ''
        background-color $blueLight

    @media $tPortraitMax
      max-width 100%
      width 100%
      margin-bottom 40px

  &__write-href
    margin-left auto
    min-width 300px

    @media $bigDesktopMax
      min-width 223px

    @media $tPortraitMax
      margin 0

  &__carousel
    background-color #19459b
    padding 97px 23% 103px

    @media $bigDesktopMax
      padding 56px 112px 64px 23%

    @media $minDesktopMax
      padding 50px 50px 85px

  &__item
    &-company
      color #fff
      font-size 18px
      font-weight 500
      line-height 22px
      margin-bottom 6px
      letter-spacing 0.02em

      @media $bigDesktopMax
        font-size 14px
        line-height 18px
        letter-spacing normal

    &-author
      color rgba(#fff, .86)
      font-size 16px
      line-height 24px
      font-weight 400
      letter-spacing 0.02em

      @media $bigDesktopMax
        font-size 12px
        line-height 16px
        letter-spacing normal

    &-text
      color rgba(#fff, .5)
      font-size 14px
      font-weight 400
      line-height 21px
      margin-top 33px
      letter-spacing 0.02em

      @media $bigDesktopMax
        font-size 13px
        line-height 21px
        letter-spacing normal
        margin-top 23px

    &-read-href
      margin-top 94px

      @media $bigDesktopMax
        margin-top 35px

