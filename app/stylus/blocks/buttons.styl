.btn
  display inline-block
  vertical-align top
  position relative
  min-width 300px
  background-color white
  color #076af2
  font-family GothamPro
  font-size 13px
  font-weight 500
  line-height 20px
  text-align center
  text-transform uppercase
  white-space nowrap
  padding 34px 60px 32px
  letter-spacing 0.025em
  border none
  outline none
  box-shadow: inset 0 0 0 3px transparent;
  transition color .4s, box-shadow .4s
  user-select none
  z-index 1
  @media $bigDesktopMax
    font-size 11px
    line-height 14px
    padding 25px 32px
    letter-spacing normal
    min-width 224px
  @media $mLandscapeMax
    min-width 210px
    padding-left 15px
    padding-right 15px
  &:after
    @extend .after
    left 0
    top 0
    width 0
    height 100%
    background-color $blueLight
    transition width .4s cubic-bezier(0.645, 0.045, 0.355, 1)
    z-index -1
  &:hover
    color #fff
    &:after
      width 100%
  &--light
    background-color #f1f7ff
  &--blue
    color #fff
    border 3px solid $blueLight
    background-color $blueLight
    padding-top 31px
    padding-bottom 29px
    &:after
      background-color #fff
    &:hover
      border-color #f1f7ff
      color #076af2
  &--blue-border
    background-color transparent
    box-shadow: inset 0 0 0 2px $blueLight
    color #fff
  &--center
    display block
    max-width 358px
    margin-left auto
    margin-right auto
