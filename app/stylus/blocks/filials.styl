.filials
  &__map
    width 100%
    height 500px
    background-color #ebebeb
    margin-bottom 28px
    @media $bigDesktopMax
      height 370px
  &__items
    display flex
    flex-wrap wrap
    width calc(100% + 28px)
    margin 0 -14px
    @media $tPortraitMax
      width 100%
      margin 0
  &__item
    display flex
    flex-wrap wrap
    width calc(100%/3 - 28px)
    margin 0 14px
    background-color #f1f7ff
    min-height 179px
    @media $bigDesktopMax
      min-height 130px
    @media $tPortraitMax
      width 100%
      margin 0 0 3px
    &-left
      width calc(100% - 84px)
      padding 35px 30px 25px 75px
      @media $bigDesktopMax
        width calc(100% - 64px)
        padding 26px 30px 12px 53px
    &-title
      position relative
      color $color
      font-size 16px
      font-weight 500
      line-height 21px
      min-height 42px
      margin-bottom 6px
      @media $bigDesktopMax
        font-size 13px
        line-height 18px
        min-height 35px
      &:before
        @extend .before
        left -44px
        top -6px
        width 23px
        height 31px
        background url('data:image/png;base64,') no-repeat center
        background-size contain
        @media $bigDesktopMax
          left -31px
          top -4px
          width 17px
          height 24px
    &-address
      display block
      color rgba($color, .86)
      font-size 13px
      line-height 19px
      margin-bottom 26px
      letter-spacing 0.02em
      @media $bigDesktopMax
        font-size 12px
        line-height 17px
        margin-bottom 8px
    &-data
      display flex
      flex-direction column
      color $color
      font-size 16px
      font-weight 500
      line-height 22px
      @media $bigDesktopMax
        font-size 14px
        line-height 20px
      a
        color $color
        align-self flex-start
        &[href^="tel"]
          transition opacity .4s
          &:hover
            opacity .7
    &-right
      display flex
      flex-direction column
      flex-shrink 0
      width 84px
      border-left 3px solid #fff
      @media $bigDesktopMax
        width 64px
    &-btn
      display block
      position relative
      width 100%
      height 50%
      border-bottom 3px solid #ffffff
      transition background .4s
      &:hover
        background-color $blueLight
      &:nth-child(2)
        border-bottom none
      &:before
        @extend .before
        top 50%
        transform translateY(-50%)
        background-repeat no-repeat
        background-position 50% 50%
        transition background .4s
        background-size contain
        z-index 1
      &--feedback
        &:before
          width 37px
          height 24px
          left 22px
          background-image url('data:image/png;base64,')
          @media $bigDesktopMax
            width 26px
            height 18px
            left 17px
        &:hover
          &:before
            background-image url('data:image/png;base64,')
      &--record
        &:before
          width 34px
          height 34px
          left 24px
          background-image url('data:image/png;base64,')
          @media $bigDesktopMax
            width 24px
            height 34px
            left 19px
        &:hover
          &:before
            background-image url('data:image/png;base64,')
  &__bottom
    margin-top 47px
    margin-bottom -8px
    @media $bigDesktopMax
      margin-top 26px
      margin-bottom -8px
    .btn
      width 100%
      max-width 354px
      margin 0 4px 8px
      @media $bigDesktopMax
        max-width 260px
