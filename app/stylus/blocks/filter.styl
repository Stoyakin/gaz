.filter
  &__item
    margin-bottom 7px
    &--range, &--color
      margin-top 40px
      margin-bottom 40px
      &:first-child
        margin-top 0
      &:last-child
        margin-bottom 0
    &:last-child
      margin-bottom 0
    &-title
      color $color
      font-size 13px
      font-weight 500
      line-height 20px
      text-transform uppercase
      margin-bottom 31px
    &-range
      &-row
        display flex
        justify-content space-between
        margin-top 10px
      //&-input
      &-number
        display block
        width 88px
        hegith 32px
        text-align center
        color $color
        font-family GothamPro
        font-size 13px
        font-weight 500
        line-height 32px
        text-transform uppercase
        background-color white
        border none
        outline none
        // &--from
        // &--to
    &-select
      background-color #fff
    &-colors
      display flex
      flex-wrap wrap
      width calc(100% + 10px)
      margin 0 -5px -10px
    &-color
      display flex
      position relative
      width 34px
      height 34px
      margin 0 5px 10px
      &-input
        position absolute
        left 0
        top 0
        opacity 0
        visibility hidden
      &-label
        display block
        position relative
        width 100%
        height 100%
        cursor pointer
  .choices__inner
    background-color #fff
