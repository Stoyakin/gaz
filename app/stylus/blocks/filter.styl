.filter
  &__item
    margin-bottom 7px
    &--range, &--color
      margin-top 40px
      margin-bottom 40px
      &:first-child
        margin-top 0
      &:last-child
        margin-bottom 0
    &:last-child
      margin-bottom 0
    &-title
      color $color
      font-size 13px
      font-weight 500
      line-height 20px
      text-transform uppercase
      margin-bottom 12px
    &-range
      &-row
        display flex
        justify-content space-between
        margin-top 10px
      //&-input
      &-number
        display block
        width 88px
        hegith 32px
        text-align center
        color $color
        font-family GothamPro
        font-size 13px
        font-weight 500
        line-height 32px
        text-transform uppercase
        background-color white
        border none
        outline none
        // &--from
        // &--to
    &-select
      background-color #fff
    &-colors
      display flex
      flex-wrap wrap
      width calc(100% + 10px)
      margin 0 -5px -10px
    &-color
      display flex
      position relative
      width 34px
      height 34px
      margin 0 5px 10px
      &-input
        position absolute
        left 0
        top 0
        opacity 0
        visibility hidden
        &:checked ~ label
          border-color #fff
          box-shadow 0 0 12px rgba(0, 0, 0, 0.12)
          &:before
            opacity 1
      &-label
        display block
        position relative
        width 100%
        height 100%
        cursor pointer
        border 1px solid transparent
        transition border .4s, box-shadow .4s
        &:before
          @extend .before
          left 10px
          top 10px
          width 14px
          height 14px
          background url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAA4AAAAOBAMAAADtZjDiAAAALVBMVEX///8HavIRcPO/2Px7sPjK3/w1hvX1+f/t9P7r8/7k7/5sp/c8ivUpfvQeePOXdg88AAAAN0lEQVQI12PACgogFEsmhHaUARIcDCyCykB67QZHIQMgnSgG5jIECYK5DKyKyhDVcQYQmh2byQBD+wWJ72H8WAAAAABJRU5ErkJggg==') no-repeat center
          opacity 0
          transition opacity .4s
          z-index 1
  .choices__inner
    background-color #fff
    @media $bigDesktopMax
      max-width 100%

  form
    > .row
      margin-bottom 35px
      &:last-child
        margin-bottom 0

.bx-filter-block
  .filter__item--range,
  .filter__item--color
    margin-top 40px
    margin-bottom 40px
