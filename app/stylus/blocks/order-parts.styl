.order-parts
  display flex
  flex-wrap wrap
  align-items flex-start
  justify-content space-between
  &__left
    width calc(100% - 100%/3 - 14px)
  &__right
    width calc(100%/3 - 14px)
  &__download-price
    display flex
    align-items center
    position relative
    width 366px
    height 122px
    margin-left auto
    margin-top 8px
    padding-left 40px
    background-color white
    border 2px solid whitesmoke
    transition background .4s, border .4s
    &:after
      content ''
      position absolute
      right 40px
      top 50%
      transform translateY(-50%)
      width 54px
      height 54px
      background url('data:image/png;base64,') no-repeat center
      transition background .4s
    span
      display flex
      align-items center
      position relative
      width 180px
      color $color
      font-size 15px
      font-weight 500
      line-height 21px
      transition color .4s
      &:before
        content ''
        display inline-block
        flex-shrink 0
        width 42px
        height 42px
        margin-right 19px
        background url('data:image/png;base64,') no-repeat center
        transition background .4s
    &:hover
      border-color #076af2
      background-color #076af2
      &:after
        background-image url('data:image/png;base64,')
      span
        color #fff
        &:before
          background-image url('data:image/png;base64,')

