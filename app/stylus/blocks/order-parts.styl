.order-parts
  display flex
  flex-wrap wrap
  align-items flex-start
  justify-content space-between
  margin-bottom 89px
  @media $bigDesktopMax
    margin-bottom 54px
  &:last-child
    margin-bottom 0
  &__left
    width calc(100% - 100%/3 - 14px)
    @media $tPortraitMax
      width 100%
      margin-bottom 25px
  &__right
    @media $tPortraitMax
      width 100%
  &__download-price
    display flex
    align-items center
    position relative
    width 366px
    height 122px
    margin-left auto
    margin-top 8px
    padding-left 38px
    background-color white
    border 2px solid whitesmoke
    transition background .4s, border .4s
    @media $bigDesktopMax
      width 272px
      height 90px
      padding-left 28px
    @media $tPortraitMax
      margin-left 0
    &:after
      content ''
      position absolute
      right 38px
      top 50%
      transform translateY(-50%)
      width 54px
      height 54px
      background url('data:image/png;base64,') no-repeat center
      transition background .4s
      background-size contain
      @media $bigDesktopMax
        width 40px
        height 40px
        right 28px
    span
      display flex
      align-items center
      position relative
      width 180px
      color $color
      font-size 15px
      font-weight 500
      line-height 21px
      transition color .4s
      @media $bigDesktopMax
        font-size 13px
        line-height 16px
        width 140px
      &:before
        content ''
        display inline-block
        flex-shrink 0
        width 42px
        height 42px
        margin-right 19px
        background url('data:image/png;base64,') no-repeat center
        transition background .4s
        background-size contain
        @media $bigDesktopMax
          width 32px
          height 31px
          margin-right 15px
    &:hover
      border-color #076af2
      background-color #076af2
      &:after
        background-image url('data:image/png;base64,')
      span
        color #fff
        &:before
          background-image url('data:image/png;base64,')

