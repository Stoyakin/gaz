.iann
  height calc(100vh - 110px)
  min-height 650px
  margin-bottom 143px

  @media $bigDesktopMax
    height calc(100vh - 82px)
    margin-bottom 93px
    min-height 550px

  @media $minDesktopMax
    min-height auto
    height 62vh

  .swiper
    &-container
      height 100%

    &-ind
      display flex
      align-items center
      position absolute
      left 50%
      transform translateX(-50%)
      bottom 38px
      user-select none
      z-index 2

      @media $bigDesktopMax
        bottom 26px

      @media $minDesktopMax
        left 30px
        transform none

      @media $tPortraitMax
        display none

      &-number
        font-size 13px
        font-weight 500
        line-height 20px
        text-transform uppercase

        &--prev
          color #076af2

        &--next
          color $color

      &-line
        position relative
        background-color white
        width 444px
        height 2px
        flex-shrink 0
        margin 0 20px
        overflow hidden

        @media $bigDesktopMax
          width 332px

        span
          display block
          height 2px
          position absolute
          left 0
          top 0
          background-color $blueLight

    &-nav
      display flex
      align-items center
      background-color white
      position absolute
      bottom 0
      right 0
      z-index 2
      user-select none
      justify-content flex-end
      width 393px

      @media $bigDesktopMax
        width 306px

    &-count
      display flex
      align-items flex-start

      @media $bigDesktopMax
        margin-top 3px

      &-item
        color #076af2
        font-size 60px
        line-height 52px
        font-weight 400
        text-transform uppercase

        @media $bigDesktopMax
          font-size 44px
          line-height 36px

      &-all
        position relative
        color rgba(black, .2)
        font-size 18px
        line-height 22px
        font-weight 400
        text-transform uppercase
        margin-left 14px
        margin-top 2px
        min-width 26px

        @media $bigDesktopMax
          font-size 14px
          line-height 14px

        &:before
          content '/'
          display block
          position absolute
          left -11px
          top 2px
          color rgba(black, .2)
          font-size 18px
          line-height 18px
          font-weight 400
          text-transform uppercase

          @media $bigDesktopMax
            font-size 14px
            line-height 14px

  &__content
    display flex
    height 100%
    padding-left 108px
    justify-content center
    flex-direction column
    align-items flex-start
    background-repeat no-repeat
    background-position center
    background-size cover

    @media $bigDesktopMax
      padding-left 73px

    @media $minDesktopMax
      padding-left 30px

    &-title
      color #1d1f20
      font-size 60px
      font-weight 500
      line-height 60px
      margin-bottom 15px

      @media $bigDesktopMax
        font-size 44px
        line-height 44px
        letter-spacing .02em
        margin-bottom 4px

    &-text
      color #1d1f20
      font-size 32px
      font-weight 400
      line-height 48px

      @media $bigDesktopMax
        font-size 24px
        line-height 36px
        letter-spacing .02em

    &-href
      margin-top 60px
      padding 33px 72px

      @media $bigDesktopMax
        margin-top 24px
        padding 27px 26px 23px
        min-width 224px
